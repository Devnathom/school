<%- include('../partials/header', { title, page }) %>

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6"><h1><i class="fas fa-chalkboard-teacher mr-2"></i>จัดการครู</h1></div>
      <div class="col-sm-6 text-right">
        <a href="/teachers/add" class="btn btn-primary"><i class="fas fa-plus mr-1"></i>เพิ่มครู</a>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
        <table class="table table-bordered table-striped datatable">
          <thead>
            <tr><th>รหัส</th><th>ชื่อ-นามสกุล</th><th>แผนก</th><th>ตำแหน่ง</th><th>จัดการ</th></tr>
          </thead>
          <tbody>
            <% teachers.forEach(function(t) { %>
            <tr>
              <td><%= t.teacherId %></td>
              <td><%= t.firstName %> <%= t.lastName %></td>
              <td><%= t.department || '-' %></td>
              <td><%= t.position || '-' %></td>
              <td>
                <button onclick="confirmDelete('/teachers/delete/<%= t.id %>', '<%= t.firstName %>')" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer', { success: null, error: null }) %>
